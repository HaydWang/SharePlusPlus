<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFrameBackground"
    android:theme="@style/AppTheme.NoActionBar">

    <!-- Snap content view -->
    <ScrollView
        android:id="@+id/layout_snap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="@color/colorSnapBackground"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/text_data_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/colorSnapTitle" />

            <!-- Text content -->
            <com.droidrise.snaptext.JustifyTextView
                    android:id="@+id/text_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/colorSnapText" />

            <!-- Time and signature -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/text_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorSignature" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorSignature" />

                        <ImageView
                            android:layout_width="62dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="4dp"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/google_play_badge" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Top Button -->
    <ImageButton android:id="@+id/button_exit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="top|end"
        android:background="@drawable/ic_close"/>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_gravity="bottom|center_horizontal">

        <ImageButton
            android:id="@+id/button_wechat"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_wechat_friend"/>

        <ImageButton
            android:id="@+id/button_moments"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_wechat_moments"/>

        <ImageButton
            android:id="@+id/button_share"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_share"/>

        <ImageButton
            android:id="@+id/button_save"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/ic_save"/>

        <!--<com.droidrise.snaptext.CircleButton-->
