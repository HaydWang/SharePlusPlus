<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.NoActionBar">

    <ScrollView
        android:id="@+id/layout_snap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorSnapBackground">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/shape_textview_border">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="@dimen/activity_vertical_margin"
                    android:background="@drawable/shape_textview_border">

                    <TextView
                        android:id="@+id/text_data_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/colorSignature" />

                    <TextView
                        android:id="@+id/text_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textColor="@color/colorSnapTime" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layerType="software"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:background="@drawable/shape_border_dash" />

                    <com.droidrise.shareplusplus.JustifyTextView
                        android:id="@+id/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="serif:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:lineSpacingMultiplier="1.5"
                        android:textColor="@color/colorSnapText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layerType="software"
                        android:background="@drawable/shape_border_dash" />

                    <TextView
                        android:id="@+id/text_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_gravity="right"
                        android:textColor="@color/colorSignature" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/fab_margin"
        android:layout_gravity="bottom|end">

        <com.droidrise.shareplusplus.CircleButton
            android:id="@+id/button_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.droidrise.shareplusplus.CircleButton
            android:id="@+id/button_moments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.droidrise.shareplusplus.CircleButton
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.droidrise.shareplusplus.CircleButton
            android:id="@+id/button_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>